</head>
<body>
<div id="header">
		<img src="/img/tronc.png" id="fondLogo" alt="fondLogo">
		<div id="clear"></div>
		<div id="containerSet">
			<span id="setonline">SetOnline</span>
		</div>
		<div id="menu">
			<a href="/accueil">
			<img alt="plancheA" id="plancheAccueil" class="planche" src="/img/plancheA.png" />
			</a>
			<a href="/game">
			<img alt="plancheJ" id="plancheJouer" class="planche" src="/img/plancheJ.png" />
			</a>
			<a href="/profil" id="profil">
			<img alt="plancheP" id="plancheProfil" class="planche" src="/img/plancheP.png" />
			</a>
			<a href="/classement">
			<img alt="plancheC" id="plancheClassement" class="planche" src="/img/plancheC.png" />
			</a>
		</div>
	</div>
    <header>
	    <div id="connexion">
			<div id="co">
				<span class="bb" id="bj">Bonjour</span>
				<span class="bb" id="pseudoConnecte"></span>
				<button type="button" class="btn bb" onclick="deco()">Deconnexion</button> 
			</div>
        </div>
    </header>
    <div id="contenu" class="bb">
        <h2><span id="pseudoConnecte"></span></h2>
        <img alt="avatar" id="avatarProfil" src="" />
		<h3 style="font-size:22px">Médailles</h3>
        <div id="medailles">
        </div>

		<h3 style="font-size:22px">Trophées</h3>
        <div id="trophes">
        </div>

		<h3 style="font-size:22px">Liste d'amis</h3>
        <div id="liste_amis">
        </div>
		<form>
			<label for="pseudoAjout" class="bb">Pseudo: </label>
			<input type="text" id="pseudoAjout" />
			<input type="button" value="Ajouter" class="btn bb" onclick="ajouteAmi()">
		</form>
		 
		<h3 style="font-size:22px">Liste de demandes d'amis</h3>
		<div id="liste_demandes_amis">
        </div>

        <div id="rangs">
        </div>

		<h3 style="font-size:22px">Modification du profil</h3>
		<div id="modifProfil">
			<form>
				<label for="Ancien_mdp" class="bb">Ancien mot de passe: </label>
				<input type="password" id="Ancien_mdp" />
				<label for="Nouveau_mdp" class="bb">Nouveau mot de passe: </label>
				<input type="password" id="Nouveau_mdp" />
				<label for="avatar" class="bb">Avatar</label>
				<input type="file" id="avatar" accept="image/*" onchange="previewFile()"/>
				<img id="i" src="" alt=" " height="200px" width="200px" onload="redim_image()">
				<input type="button" value="Modifier" class="btn bb" onclick="ModifierProfil()"></button>
			</form>
        </div>
    </div>
