<body>
	<img src="/img/logo.png" id="logo" align:middle alt="Logo_SetOnline">
	<p id="setonline">SetOnline</p>
    <div id="contenu">
        <h2><span id="pseudoConnecte"></span></h2>
        <img alt="avatar" id="avatarProfil" src="/img/avatar.png" />
		<h3>Médailles</h3>
        <div id="medailles">
        </div>

		<h3>Trophés</h3>
        <div id="trophes">
        </div>

		<h3>Liste d'amis</h3>
        <div id="liste_amis">
        </div>
		<form>
			<label for="pseudoAjout">Pseudo: </label>
			<input type="text" id="pseudoAjout" required />
			<input type="button" value="Ajouter" onclick="ajouteAmi()">
		</form>

		<h3>Liste de demandes d'amis</h3>
		<div id="liste_demandes_amis">
        </div>

        <div id="rangs">
        </div>

		<h3>Modification du profil</h3>
		<div id="modifProfil">
			<form>
				<label for="Ancien_mdp">Ancien mot de passe: </label>
				<input type="password" id="Ancien_mdp" />
				<label for="Nouveau_mdp">Nouveau mot de passe: </label>
				<input type="password" id="Nouveau_mdp" />
				<label for="avatar">Avatar</label>
				<input type="file" id="avatar" accept="image/*"/>
				<input type="button" value="Modifier" onclick="ModifierProfil()"></button>
			</form>
        </div>
    </div>
